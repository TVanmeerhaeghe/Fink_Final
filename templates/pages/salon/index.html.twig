{% extends 'base.html.twig' %}

{% block title %}Fink - Les salons
{% endblock %}

{% block body %}
	{% if not salons.items is same as([]) %}
		<h1>Les salons</h1>

		{% include "components/_search_data.html.twig" with {form:form} %}

		<div>
			{% for salon in salons %}
				{% if salon.isTrusted == true %}
					<div>
						<img src="{{asset(salon.image)}}">
						<h4>{{salon.nom}}</h4>
						<p>{{salon.ville}}</p>
						<p>{{salon.style}}</p>
						<a href="{{ path('salon.show', {id: salon.id}) }}">Voir plus</a>
					</div>
				{% endif %}
			{% endfor %}
		</div>
		<div>
			{{ knp_pagination_render(salons) }}
		</div>
	{% else %}
		<h4>Il n'y a pas de salon actuellement</h4>
	{% endif %}
{% endblock %}
