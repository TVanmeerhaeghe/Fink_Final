{% extends 'base.html.twig' %}

{% block title %}Fink - Connexion
{% endblock %}

{% block body %}
	<div class="container-form box">
		

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}


		{% if error %}
			<div class="alert alert-danger mt-4">
				{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>
		{% endif %}

		<form action="{{ path('security.login') }}" method="post" name="login">
			<h1>Formulaire de connnexion</h1>
			
			<div>
				{# <label for="username">Adresse email</label> #}
				<input class="input-type" type="email" id="username" name="_username" placeholder="exemple@fink.fr" value="{{ last_username }}">
			</div>
			<div>
				{# <label for="password">Mot de passe</label> #}
				<input class="input-type" type="password" id="password" name="_password" placeholder="********">
			</div>
			<button class="button" type="submit">Se connecter</button>
		</form>
	</div>
{% endblock %}
